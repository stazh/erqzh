{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Custom API",
        "description": "This is the place to add your own path endpoints"
    },
    "servers": [
        {
            "description": "Endpoint for testing on localhost",
            "url":"http://localhost:8080/exist/apps/rqzh2"
        }
    ],
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic"
            },
            "cookieAuth": {
                "type": "apiKey",
                "name": "teipublisher.com.login",
                "in": "cookie"
            }
        }
    },
    "paths": {
        "/api/register/{id}": {
            "get": {
                "summary": "Registerdaten abrufen",
                "operationId": "custom:registerdaten",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "schema":{
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200":{
                        "description": "Registerdaten",
                        "content": {
                            "text/html":{
                                "schema":{
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/abbreviations":{
            "get": {
                "summary": "Abkürzungsverzeichnis",
                "operationId": "custom:abbreviations",
                "parameters": [
                    {
                        "name": "language",
                        "in": "query",
                        "schema":{
                            "type": "string",
                            "default": "de"
                        }
                    }
                ],
                "responses": {
                    "200":{
                        "description": "Abkürzungsverzeichnis",
                        "content": {
                            "text/html":{
                                "schema":{
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/partners":{
            "get": {
                "summary": "Liste der Projektpartner",
                "operationId": "custom:partners",
                "parameters": [
                    {
                        "name": "language",
                        "in": "query",
                        "schema":{
                            "type": "string",
                            "default": "de"
                        }
                    }
                ],
                "responses": {
                    "200":{
                        "description": "Liste der Projektpartner",
                        "content": {
                            "text/html":{
                                "schema":{
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/document/{id}/html": {
            "get": {
                "summary": "Retrieve document content as HTML",
                "description": "Retrieve whole document transformed to HTML via ODD",
                "tags": [
                    "documents"
                ],
                "operationId": "custom:html",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "test/F-rom.xml"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns the entire document as HTML",
                        "content": {
                            "text/html": {
                                "schema": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Document not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "security": [
        {
            "cookieAuth": []
        },
        {
            "basicAuth": []
        }
    ]
}
